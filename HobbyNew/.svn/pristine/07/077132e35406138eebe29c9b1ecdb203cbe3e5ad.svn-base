	function check() {
		  if(MyPop.m_id.value == "") {
		    alert("보내는 사람을 입력해 주세요.");
		    MyPop.m_id.focus();
		    return false;
		  }
		  else if(MyPop.m_id2.value == "") {
		    alert("받는 사람을 입력해 주세요.");
		    MyPop.m_id2.focus();
		    return false;
		  }
		  else if(MyPop.n_subject.value == "") {
			    alert("제목을 입력해 주세요.");
			    MyPop.n_subject.focus();
			    return false;
			  }
		  else if(MyPop.n_content.value == "") {
			    alert("내용을 입력해 주세요.");
			    MyPop.n_content.focus();
			    return false;
			  }
		  else return true;
		  
		  
	
		  
		}

	function closeP(){
		window.close();
	}

